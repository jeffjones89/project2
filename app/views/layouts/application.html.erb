<!DOCTYPE html>
<html>
  <head>
    <title>Project2</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <header>
      <nav>
        <ul>
        <% if (current_user||current_manager) %>
          <li><%= "Logged in as #{current_user ? current_user.username : current_manager.username}" %></li>
          <li><%= link_to("Sign out", sign_out_path)  %></li>
          <li><%= link_to("Home", (current_user ? current_user : current_manager)) %></li>
        <% else %>
          <li><%= link_to "Manager Sign In", managers_sign_in_path %></li>
        <% end %>
        </ul>
      <div class='notice'><%= flash[:notice] %></div>
      </nav>

    </header>
    <main>
      <%= yield %>
    </main>
    <footer>
      jsm
    </footer>
  </body>
</html>
